@page
@model AddPrescriptionModel
@{
    ViewData["Title"] = "Add Prescription";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow p-4">
                <h3 class="text-center mb-4">üìù Add Prescription</h3>

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">@TempData["Error"]</div>
                }

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success">@TempData["Success"]</div>
                }

                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Prescription.PatientID" class="form-label">Patient ID</label>
                        <input asp-for="Prescription.PatientID" class="form-control" />
                        <span asp-validation-for="Prescription.PatientID" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Prescription.PatientName" class="form-label">Patient Name</label>
                        <input asp-for="Prescription.PatientName" class="form-control" />
                        <span asp-validation-for="Prescription.PatientName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Prescription.Dosage" class="form-label">Dosage</label>
                        <input asp-for="Prescription.Dosage" class="form-control" />
                        <span asp-validation-for="Prescription.Dosage" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Prescription.Instructions" class="form-label">Instructions</label>
                        <textarea asp-for="Prescription.Instructions" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Prescription.Instructions" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Submit Prescription</button>
                </form>
            </div>
        </div>
    </div>
</div>
