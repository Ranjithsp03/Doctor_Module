@page
@model DoctorDashboardModel
@{
    ViewData["Title"] = "Doctor Dashboard";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .full-height {
        height: 100vh;
    }

    .action-button {
        font-size: 1.1rem;
        padding: 15px;
    }
</style>

@if (Model.Doctor != null)
{
<h2 class="text-center mt-4">Welcome Dr. @Model.Doctor.Name</h2>
}
 
<div class="container-fluid full-height d-flex align-items-center justify-content-center">
    <div class="row w-100">
       
        <div class="col-md-6 d-flex flex-column justify-content-center align-items-center">
            <div class="w-75 d-grid gap-3">
                <a asp-page="/viewAppointments" asp-route-doctorId="@TempData["DoctorID"]" class="btn btn-primary action-button">
                    üìÖ View Today‚Äôs Appointments
                </a>
               <a asp-page="/ApproveAppointments" asp-route-doctorId="@TempData["DoctorID"]" class="btn btn-warning action-button">
                ‚úÖ Approve Appointments
                </a>

               <a asp-page="/AddPrescription" asp-route-doctorId="@TempData["DoctorID"]" class="btn btn-success action-button">
    üíä Enter Prescription
</a>

            </div>
        </div>

        <!-- Right Column: Doctor Info -->
        <div class="col-md-6 d-flex justify-content-center align-items-center">
            <div class="card shadow p-4" style="width: 100%; max-width: 400px;">
                <h4 class="mb-3 text-center">Doctor Profile</h4>
                <p><strong>Name:</strong> @Model.Doctor.Name</p>
                <p><strong>Specialization:</strong> @Model.Doctor.Specialization</p>
                <p><strong>Experience:</strong> @Model.Doctor.Experiance years</p>
                <p><strong>Email:</strong> @Model.Doctor.Email</p>

                    <div class="d-grid gap-2 mt-4">
                        <a class="btn btn-outline-primary" href="/EditDoctor?id=@Model.Doctor.DoctorID">
        ‚úèÔ∏è Edit Profile
    </a>
    
                    <a asp-page="/TimeSlotEntry" class="btn btn-outline-primary">
                        ‚è±Ô∏è Record Time Slots
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
