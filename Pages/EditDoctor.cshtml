@page
@model EditDoctorModel
@{
    ViewData["Title"] = "Edit Doctor Profile";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow p-4">
                <h3 class="text-center mb-4">ðŸ©º Edit Doctor Profile</h3>

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">@TempData["Error"]</div>
                }

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success">@TempData["Success"]</div>
                }

                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Doctor.Name" class="form-label">Name</label>
                        <input asp-for="Doctor.Name" class="form-control" />
                        <span asp-validation-for="Doctor.Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Doctor.Specialization" class="form-label">Specialization</label>
                        <input asp-for="Doctor.Specialization" class="form-control" />
                        <span asp-validation-for="Doctor.Specialization" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Doctor.Experiance" class="form-label">Experience (Years)</label>
                        <input asp-for="Doctor.Experiance" type="number" class="form-control" min="0" />
                        <span asp-validation-for="Doctor.Experiance" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Doctor.Email" class="form-label">Email</label>
                        <input asp-for="Doctor.Email" type="email" class="form-control" />
                        <span asp-validation-for="Doctor.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Doctor.Password" class="form-label">Password</label>
                        <input asp-for="Doctor.Password" type="password" class="form-control" />
                        <span asp-validation-for="Doctor.Password" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Update Profile</button>
                </form>
            </div>
        </div>
    </div>
</div>
