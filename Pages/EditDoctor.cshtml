@page
@model EditDoctorModel
@{
    ViewData["Title"] = "Edit Doctor Profile";
}
 
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
 
    <style>
        body {
            background-image: url('https://th.bing.com/th/id/R.e2d47ac60af22e8d164e882c112495b1?rik=z8v38rnd%2fhezMA&riu=http%3a%2f%2fwww.suhailbahwangroup.com%2fwr-plugins%2f1001_left_image_content_box%2fuploads%2fbanner-1607239062.jpg&ehk=FVSXgwi1Z4tItKWqIUg2NjaS5AHvdQrGLd%2bGkxuz%2fjQ%3d&risl=&pid=ImgRaw&r=0');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            margin: 0;
            padding: 0;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
 
        .glass-card {
            background: rgba(255, 255, 255, 0.3);
            backdrop-filter: blur(12px);
            border-radius: 12px;
            padding: 40px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
            color: #000;
        }
 
        .glass-card h3 {
            font-weight: bold;
        }
 
        .form-control {
            background-color: rgba(255, 255, 255, 0.85);
            border: none;
        }
 
        .form-control:focus {
            box-shadow: 0 0 0 2px rgba(0, 123, 255, 0.25);
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="glass-card">
                    <h3 class="text-center mb-4">ðŸ©º Edit Doctor Profile</h3>
 
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }
 
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success">@TempData["Success"]</div>
                    }
 
                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="Doctor.Name" class="form-label">Name</label>
                            <input asp-for="Doctor.Name" class="form-control" />
                            <span asp-validation-for="Doctor.Name" class="text-danger"></span>
                        </div>
 
                        <div class="mb-3">
                            <label asp-for="Doctor.Specialization" class="form-label">Specialization</label>
                            <input asp-for="Doctor.Specialization" class="form-control" />
                            <span asp-validation-for="Doctor.Specialization" class="text-danger"></span>
                        </div>
 
                        <div class="mb-3">
                            <label asp-for="Doctor.Experiance" class="form-label">Experience (Years)</label>
                            <input asp-for="Doctor.Experiance" type="number" class="form-control" min="0" />
                            <span asp-validation-for="Doctor.Experiance" class="text-danger"></span>
                        </div>
 
                        <div class="mb-3">
                            <label asp-for="Doctor.Email" class="form-label">Email</label>
                            <input asp-for="Doctor.Email" type="email" class="form-control" />
                            <span asp-validation-for="Doctor.Email" class="text-danger"></span>
                        </div>
 
                        <div class="mb-3">
                            <label asp-for="Doctor.Password" class="form-label">Password</label>
                            <input asp-for="Doctor.Password" type="password" class="form-control" />
                            <span asp-validation-for="Doctor.Password" class="text-danger"></span>
                        </div>
 
                        <button type="submit" class="btn btn-primary w-100">Update Profile</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
 