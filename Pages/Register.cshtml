@page
@model RegisterModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Doctor Registration";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow p-4" style="width: 400px;">
        <h4 class="text-center mb-4">Doctor Registration</h4>

        <form method="post">
            <div class="mb-3">
                <label asp-for="Doctor.DoctorID" class="form-label"></label>
                <input asp-for="Doctor.DoctorID" class="form-control" />
                <span asp-validation-for="Doctor.DoctorID" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Doctor.Name" class="form-label"></label>
                <input asp-for="Doctor.Name" class="form-control" />
                <span asp-validation-for="Doctor.Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Doctor.Specialization" class="form-label">Specialization</label>
                <select asp-for="Doctor.Specialization" asp-items="Model.Specializations" class="form-select">
                    <option value="">-- Select Specialization --</option>
                </select>
                <span asp-validation-for="Doctor.Specialization" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Doctor.Experiance" class="form-label">Experience (years)</label>
                <input asp-for="Doctor.Experiance" class="form-control" />
                <span asp-validation-for="Doctor.Experiance" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Doctor.Email" class="form-label"></label>
                <input asp-for="Doctor.Email" class="form-control" />
                <span asp-validation-for="Doctor.Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Doctor.Password" class="form-label"></label>
                <input asp-for="Doctor.Password" type="password" class="form-control" />
                <span asp-validation-for="Doctor.Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success w-100">Sign Up</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
