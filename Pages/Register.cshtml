@page
@model RegisterModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Doctor Registration";
}
 
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
 
    <style>
        body {
           
            @* min-height: 100vh;
            margin: 0; *@
 
            background-image: url('https://img.freepik.com/free-vector/clean-medical-background_53876-116875.jpg');
            background-repeat: no-repeat;
            background-position: center;
            background-attachment: fixed;
            background-size: cover;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .card {
            background-color: rgba(255, 255, 255, 0.85);
            border: none;
            border-radius: 15px;
            backdrop-filter: blur(5px);
            padding: 30px;
            width: 100%;
            max-width: 500px;
        }

        h4 {
            font-weight: bold;
            color: #2c3e50;
        }

        .form-label {
            font-weight: 500;
        }

        .form-control:focus, .form-select:focus {
            border-color: #66d9e8;
            box-shadow: 0 0 8px 2px rgba(102, 217, 232, 0.6);
            outline: none;
        }

        .btn-success {
            background-color: #28a745;
            border: none;
        }

        .btn-success:hover {
            background-color: #218838;
        }
    </style>
</head>
<body>
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow">
            <h4 class="text-center mb-4">Doctor Registration</h4>

            <form method="post">
                <div class="mb-3">
                    <label asp-for="Doctor.DoctorID" class="form-label"></label>
                    <input asp-for="Doctor.DoctorID" class="form-control" />
                    <span asp-validation-for="Doctor.DoctorID" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Doctor.Name" class="form-label"></label>
                    <input asp-for="Doctor.Name" class="form-control" />
                    <span asp-validation-for="Doctor.Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Doctor.Specialization" class="form-label">Specialization</label>
                    <select asp-for="Doctor.Specialization" asp-items="Model.Specializations" class="form-select">
                        <option value="">-- Select Specialization --</option>
                    </select>
                    <span asp-validation-for="Doctor.Specialization" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Doctor.Experiance" class="form-label">Experience (years)</label>
                    <input asp-for="Doctor.Experiance" class="form-control" />
                    <span asp-validation-for="Doctor.Experiance" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Doctor.Email" class="form-label"></label>
                    <input asp-for="Doctor.Email" class="form-control" />
                    <span asp-validation-for="Doctor.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Doctor.Password" class="form-label"></label>
                    <input asp-for="Doctor.Password" type="password" class="form-control" />
                    <span asp-validation-for="Doctor.Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success w-100">Sign Up</button>
            </form>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
