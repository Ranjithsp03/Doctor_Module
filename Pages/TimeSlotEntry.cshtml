@page
@model TimeSlotEntryModel
@{
    ViewData["Title"] = "Record Time Slot";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow p-4">
                <h3 class="text-center mb-4">ðŸ•’ Record Time Slot</h3>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        <ul>
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        </ul>
                    </div>
                }

                @if (TempData["Name"] != null)
                {
                    <div class="alert alert-info text-center mb-3">
                        Logged in as: <strong>@TempData["Name"]</strong>
                    </div>
                }

                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Timeslot.Date" class="form-label">Date</label>
                        <input asp-for="Timeslot.Date" type="date" class="form-control" />
                        <span asp-validation-for="Timeslot.Date" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Timeslot.StartTime" class="form-label">Start Time</label>
                        <input asp-for="Timeslot.StartTime" type="time" class="form-control" />
                        <span asp-validation-for="Timeslot.StartTime" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Timeslot.EndTime" class="form-label">End Time</label>
                        <input asp-for="Timeslot.EndTime" type="time" class="form-control" />
                        <span asp-validation-for="Timeslot.EndTime" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Timeslot.Count" class="form-label">Number of Patients</label>
                        <input asp-for="Timeslot.Count" type="number" class="form-control" min="1" max="100" />
                        <span asp-validation-for="Timeslot.Count" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-4">
                        <input asp-for="Timeslot.IsAvailable" class="form-check-input" type="checkbox" />
                        <label asp-for="Timeslot.IsAvailable" class="form-check-label">Available</label>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Save Slot</button>
                </form>

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger mt-3">@TempData["Error"]</div>
                }
            </div>
        </div>
    </div>
</div>
